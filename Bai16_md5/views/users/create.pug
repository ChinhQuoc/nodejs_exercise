extends ../layouts/common
block content
	h2 Create new user

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create" method="POST")
		.form-group
			label(for="name") Name
			input#name.form-control(type="text", name="name", value=values ? values.name: '')
			label(for="email") Email
			input#email.form-control(type="text", name="email", value=values ? values.email: '')
			label(for="age") Age
			input#age.form-control(type="text", name="age", value=values ? values.age: '')
			label(for="phone") Phone
			input#phone.form-control(type="text", name="phone", value=values ? values.phone: '')

		input.btn.btn-primary(type="submit")